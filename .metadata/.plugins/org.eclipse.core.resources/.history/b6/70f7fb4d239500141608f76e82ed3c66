#include "WPILib.h"

class Robot: public IterativeRobot
{

public:
	Joystick *stickOne;
	Joystick *stickTwo;
	Talon *talZero;
	Talon *talTwo;
	RobotDrive *drive;
private:
	LiveWindow *lw;

	void RobotInit()
	{
		stickOne = new Joystick(0);
		stickTwo = new Joystick(1);
		talZero = new Talon(0);
		talTwo = new Talon(2);
		drive = new RobotDrive(talZero, talTwo);
		lw = LiveWindow::GetInstance();
	}

	void AutonomousInit()
	{

	}

	void AutonomousPeriodic()
	{

	}

	void TeleopInit()
	{

	}

	void TeleopPeriodic()
	{
		drive->TankDrive(stickOne, stickTwo);
	}

	void TestPeriodic()
	{
		lw->Run();
	}
};

START_ROBOT_CLASS(Robot);

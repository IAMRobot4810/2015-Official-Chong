#include "DriveSystem.h"

DriveSystem::DriveSystem(){

	stick  = new Joystick(0);
	stickTwo = new Joystick(1);
	talZeroEnco = new Encoder(5);
	talTwoEnco = new Encoder(6); //Change inputs for both of these.
	talZero = new Talon(0);
	talTwo = new Talon(2);
	drive = new RobotDrive(talZero, talTwo);

}

DriveSystem::~DriveSystem(){

	delete stick;
	delete stickTwo;
	delete talZeroEnco;
	delete talTwoEnco;
	delete talZero;
	delete talTwo;
	delete drive;

}

void DriveSystem::DriveArcadeStyle(){

	sReadX = stick->GetX();
	sReadY = stick->GetY();
	sReadZ = stick->GetZ();
	eRead = talZeroEnco->GetRaw();
	eReadTwo = talTwoEnco->GetRaw();

	drive->ArcadeDrive(*stick, false);

	if((sReadX == 0.0 && sReadZ == 0.0) && (sReadY > 0.0 || sReadY < 0)){

		//TODO: Find values for joystick readings so we can decide how much variation from joystick straight will be interpreted as straight

	}

}

